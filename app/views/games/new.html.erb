<h1><%= "New Game" %></h1>
<%= @letters %>
<p><%= "What is the longest word you can find?" %></p>

<form class="form" action="score" method="POST" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input class="input" type="text" name="word">
  <input class="submit-btn" type="submit" value="Play">
</form>
